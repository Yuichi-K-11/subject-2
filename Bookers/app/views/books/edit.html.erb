<h1>Editing Book</h1>

<% if flash[:notice] %>
  <div class= "flash">
    <%= flash[:notice] %>
  </div>
<% end %>


  <% if @book.errors.any? %>
    <div class= "form-error">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>
            <%= "error!" %>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_with model:@book, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <div class = "edit-submit">
    <%= f.submit 'Update Book' %>
  </div>
  <%=link_to("Show",book_path(@book.id)) %>
  <%=link_to("Back",books_path) %>

<% end %>